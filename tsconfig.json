{
  "include": ["src"],
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./src/types", "node_modules/@types"],
    "rootDirs": ["src"],
    "outDir": "dist"
  }
}
